<div id="sub_list">
  <strong class="well">
    <%=link_to "添加角色", new_resource_path, :remote => true %>
  </strong>
  <fieldset style="display:none"></fieldset>
  <table class="table table-condensed table-bordered">
    <thead>
      <tr>
        <th width="30%">用户</th>
        <th width="20%">角色</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% collection.each do |resource| %>
        <tr>
          <td><%=resource.user.email %></td>
          <td><%=resource.role.name %></td>
          <td align="right">
            <%=link_to "删除", resource_path(resource.id), :remote => true, :method => :delete, :confirm => "确实要删除吗？" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
