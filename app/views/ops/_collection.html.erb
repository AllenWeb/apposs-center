<div id="ops">
  <h4>
    操作员列表 <%=link_to "单击创建", new_op_path, :remote => true %>
  </h4>
  <div class="form"></div>
  <table class="table table-condensed">
    <!--thead>
      <tr>
        <th>名称</th>
        <th with="10%">操作</th>
      </tr>
    </thead-->
    <tbody>
    <% current_app.ops.each do |user| %>
      <tr>
        <td><%=user.email %></td>
        <td>
          <%=link_to "删除", op_path(user.id), :remote => true, :method => :delete, :confirm => "确实要删除吗？" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
