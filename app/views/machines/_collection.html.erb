      <div class="row-fluid">
        <div id="machines" class="span12">
          <div>
            <%=link_to( new_machine_path, remote: true) do %>
              <b class="icon-plus">手工添加服务器</b>
            <% end %>
            <div class="pull-right">
              <%=link_to reload_machines_path, remote: true do %>
                <b class="icon-download-alt">从CMDB同步服务器信息</b>
              <% end %>
            </div>
          </div>
          <div class="form"></div>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>机器名</th>
                <th>地址</th>
                <th>登录用户</th>
                <th>端口</th>
                <th>网络域</th>
                <th>分组</th>
                <th colspan="3">其它管理</th>
            	</tr>
            </thead>
            <tbody>
            <% current_user.owned_machines(current_app).each do |machine| %>
              <tr id="machines_<%=machine.id %>" box-href="<%=item_machine_path(machine,:format => 'js') %>">
                <%=render 'item', :machine => machine %>
              </tr>
            <% end %>
          </tbody>
          </table>
        </div><!--/.well -->
      </div><!--/span-->
