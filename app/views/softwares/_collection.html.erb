<div id="softwares">
  <h5 class="lead" style="text-align:center">
    软件列表 <%=link_to "单击创建", new_app_software_path(parent_id), :remote => true %>
  </h5>
  <div class="form"></div>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>名称</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
    <% collection.each do |software| %>
      <tr>
        <td><%=software.name %></td>
        <td>
          <%=link_to "修改", edit_app_software_path(parent_id,software.id), :remote => true %>
          <%=link_to "删除", app_software_path(parent_id,software.id), :remote => true, :method => :delete, :confirm => "确实要删除吗？" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
