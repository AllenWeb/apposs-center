<% if resource.errors.count > 0 %>
  msg('<ul class="errors"><%=raw resource.errors.to_a.collect{|msg| content_tag :li, msg}.join %></ul>');
<% else %>
  info("已保存！<%=@info %>");
  $("#zone").html('<%= escape_javascript(
  render 'collection', :collection => current_user.directive_templates
  ) %>');
<% end %>
